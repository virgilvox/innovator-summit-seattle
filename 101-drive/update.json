{
  "$set": {
    "messageSchema": {
      "type": "object",
      "properties": {
        "command": {
          "type": "string",
          "enum": [
            "left",
            "right",
            "forward",
            "backward",
            "stop",
            "servo",
            "shoot"
          ]
        },
        "speed": {
          "type": "number",
          "default": 0
        }
      }
    }
  }
}
